<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="jungkosta.mappers.auction.AuctionListMapper">
	<cache />

	<select id="auctionList" parameterType="java.util.Map" resultType="AuctionVO">
		select * from auctionlist_view
		<choose>
			<when test="sort == 'add_sort'.toString()">
				order by sale_date desc
			</when>
			<when test="sort == 'end_sort'.toString()">
				order by auction_end_date
			</when>
		</choose>
		
	</select>


</mapper>















